<html lang="he">

<head>
    <meta charset="UTF-8">
    <title>סידור</title>
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/basis.css" rel="stylesheet" />
    <link href="/login-style.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <div class="row align-items-center justify-content-center general-background login-wrapper">
            <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-4 general-login-box">
                <form action="/auth/login" method="POST" class="col-md-auto">
                    <div class="input-group">
                        <!-- <label for="username">User Name</label> -->
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-user"></i></div>
                        </div>
                        <input type="text" class="form-control" id="username" name="username" placeholder="שם משתמש">

                    </div>
                    <div class="input-group">
                        <!-- <label for="companyname">Company Name</label> -->
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="companyname" name="companyID" placeholder="מספר חברה">
                    </div>
                    <div class="input-group">
                        <!-- <label for="password">Password</label> -->
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-key"></i></div>
                        </div>
                        <input type="password" class="form-control" id="password" name="password" placeholder="סיסמה">
                    </div>
                    <div class="form-group submit-btn-wrap">
                        <button type="submit" class="btn btn-primary btn-round btn-block btn-login">היכנס</button>
                        <br>
                        <div class="col-xs-12 text-center">
                            <a href="#" class="">שחכת סיסמה?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.rtlcss.com/bootstrap/v4.0.0/js/bootstrap.min.js" integrity="sha384-54+cucJ4QbVb99v8dcttx/0JRx4FHMmhOWi4W+xrXpKcsKQodCBwAvu3xxkZAwsH" crossorigin="anonymous"></script>
</body>

</html>