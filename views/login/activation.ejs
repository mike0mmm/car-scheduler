<% include ../partials/header %>
<link href="/assets/css/login-style.css?v=<%= version %>" rel="stylesheet" />

<body>
    <div class="container-fluid">
        <div class="row align-items-center justify-content-center general-background login-wrapper">
            <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-4 general-login-box">
                <form action="/auth/set-password/<%= foundUser._id %>" method="POST" class="col-md-auto">
                    <label for="username" style="font-weight: bold;">
                        שם משתמש (ת.ז.)
                    </label>
                    <div class="input-group m-0">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-user"></i></div>
                        </div>
                        <input type="text" class="form-control" id="username" name="username" value="<%= foundUser.username %>" placeholder="שם משתמש">    
                    </div>
                    <label for="username" style="font-weight: bold;">
                        קוד זיהוי (שהתקבל במסרון)
                    </label>
                    <div class="input-group m-0">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-comment-alt"></i></div>
                        </div>
                        <input type="text" class="form-control" id="passwordToken" name="passwordToken" placeholder="קוד זיהוי">
                    </div>
                    <label for="username" style="font-weight: bold;">
                        סיסמה חדשה
                    </label>
                    <div class="input-group m-0">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-key"></i></div>
                        </div>
                        <input type="password" class="form-control" id="password" name="password" placeholder="סיסמה חדשה">
                    </div>
                    <label for="username" style="font-weight: bold;">
                        סיסמה חדשה (לצורך אימות)
                    </label>
                    <div class="input-group m-0">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fal fa-key"></i></div>
                        </div>
                        <input type="password" class="form-control" id="passwordRepeat" name="passwordRepeat" placeholder="חזור על סיסמה החדשה">
                    </div>
                    <div class="form-group submit-btn-wrap">
                        <button type="submit" class="btn btn-primary btn-round btn-block btn-login">
                            עדכן סיסמה
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>
<script>
     $('#passwordRepeat').on('keyup', function(e){
        console.log($(this), $('#password').val() != $(this).val());
        
        if ($('#password').val() != $(this).val()) {
            $('#passwordRepeat').addClass('is-invalid');
            $('button').attr('disabled','disabled');
        } else {
            $('#passwordRepeat').removeClass('is-invalid');
            $("button").removeAttr('disabled');
        }
     });
</script>

<% include ../partials/closing_tags %>